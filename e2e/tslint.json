{
  /*
   * Possible values:
   * - the name of a built-in config
   * - the name of an NPM module which has a "main" file that exports a config object
   * - a relative path to a JSON file
   */
  "extends": "tslint:latest",
  "rules": {
    "no-console": false,
    /*
     * Any rules specified here will override those from the base config we are extending
     */
    "quotemark": [true, "single"],
    "max-classes-per-file": [false],
    "no-string-literal": false,
    "whitespace": [
      true,
      "check-branch",
      "check-decl",
      "check-operator",
      "check-separator",
      "check-type"
      // "check-typecast"
    ],
    "object-literal-sort-keys": false,
    "object-literal-key-quotes": [true, "consistant"],
    "no-angle-bracket-type-assertion": false,
    "interface-name": [true, "never-prefix"],
    "no-submodule-imports": [true, "rxjs", "@angular/platform-browser", "@angular/core/testing", "@google-cloud/datastore/build/src/query"]
  },
  "rulesDirectory": [
    /*
     * A list of relative or absolute paths to directories that contain custom rules.
     * See the Custom Rules documentation below for more details.
     */
  ]
}